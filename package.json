{
  "name": "universal-react-starter-kit",
  "version": "1.0.0",
  "description": "An universal web application framework using react, redux, koa and webpack",
  "keywords": [
    "eslint",
    "isomorphic",
    "koa",
    "postcss",
    "pwa",
    "react",
    "react-router",
    "redux",
    "stylelint",
    "universal",
    "webpack"
  ],
  "license": "MIT",
  "main": "bin/server.js",
  "scripts": {
    "api": "bnr api",
    "asset": "bnr asset",
    "build": "bnr build",
    "dll": "bnr dll",
    "http": "bnr http",
    "postinstall": "babel-node ./scripts/postinstall.js",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint webpack src",
    "lint:style": "stylelint src/**/*.less",
    "release": "standard-version",
    "postrelease": "bnr postrelease",
    "serve": "concurrently --kill-others -p \"[{name}]\" -n \"ASSET,HTTP,API\" -c \"blue,magenta,yellow\" \"bnr asset\" \"npm run http\" \"bnr api\"",
    "serve:dist": "npm run build && NODE_ENV=production npm start",
    "start": "concurrently --kill-others -p \"[{name}]\" -n \"HTTP,API\" -c \"blue,magenta\" \"bnr http\" \"bnr api\"",
    "test": "npm run lint && npm run build"
  },
  "dependencies": {
    "autoprefixer": "^6.7.7",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "better-npm-run": "^0.0.15",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.16",
    "css-loader": "^0.28.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "file-stream-rotator": "^0.1.0",
    "image-webpack-loader": "^3.3.0",
    "less": "^3.0.0-pre.4",
    "less-loader": "^4.0.3",
    "normalize.css": "^7.0.0",
    "offline-plugin": "^4.6.2",
    "packing-glob": "^1.0.1",
    "postcss-loader": "^1.3.3",
    "pretty-error": "^2.1.0",
    "prop-types": "^15.5.8",
    "react": "^15.5.3",
    "react-a11y": "^0.3.3",
    "react-dom": "^15.5.3",
    "react-helmet": "^5.0.3",
    "react-hot-loader": "next",
    "react-intl": "^2.2.3",
    "react-redux": "^5.0.4",
    "react-router": "^3.0.3",
    "react-router-redux": "^4.0.8",
    "react-router-scroll": "^0.4.2",
    "redux": "^3.6.0",
    "redux-async-connect": "^1.0.0-rc4",
    "redux-form": "^6.6.2",
    "redux-thunk": "^2.2.0",
    "replace-hash-webpack-plugin": "^2.3.0",
    "serialize-javascript": "^1.3.0",
    "socket.io": "^2.0.0",
    "socket.io-client": "^2.0.0",
    "style-loader": "^0.17.0",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "stylelint-webpack-plugin": "^0.7.0",
    "superagent": "^3.5.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.4.1",
    "webpack-isomorphic-tools": "^3.0.2"
  },
  "devDependencies": {
    "concurrently": "^3.4.0",
    "koa": "^2.2.0",
    "koa-body": "^2.0.0",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-cookie": "^1.0.0",
    "koa-json": "^2.0.2",
    "koa-morgan": "^1.0.1",
    "koa-proxy": "^0.8.0",
    "koa-session": "5.0.0",
    "koa-static": "^3.0.0",
    "koa-webpack": "^0.3.1",
    "mkdirp": "^0.5.1",
    "opn": "^5.0.0",
    "piping": "^1.0.0-rc.4",
    "redux-devtools": "^3.3.2",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.2.0"
  },
  "engines": {
    "node": ">= 7.6.0",
    "npm": ">= 3.0.0"
  },
  "betterScripts": {
    "http": {
      "command": "babel-node ./bin/server.js",
      "env": {
        "NODE_PATH": "./src"
      }
    },
    "api": {
      "command": "babel-node ./bin/api.js",
      "env": {
        "NODE_PATH": "./api"
      }
    },
    "asset": {
      "command": "babel-node scripts/webpack-dev-server.js",
      "env": {
        "NODE_PATH": "./src"
      }
    },
    "build": {
      "command": "webpack --display-error-details --config webpack/prod.config.babel.js",
      "env": {
        "NODE_PATH": "./src"
      }
    },
    "dll": {
      "command": "webpack --colors --display-error-details --config webpack/dll.config.babel.js",
      "env": {
        "NODE_ENV": "local",
        "NODE_PATH": "./src"
      }
    },
    "postrelease": {
      "command": "git push && git push origin --tags"
    }
  }
}
